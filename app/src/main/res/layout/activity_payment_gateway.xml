<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_try17"
    android:id="@+id/repid"
    tools:context=".PaymentGateway">


    <Button
        android:id="@+id/paybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="280dp"
        android:background="@color/wallet_holo_blue_light"
        android:gravity="center"
        android:text="Continue to \n the Payment Gateway"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="311dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/pay_wallet_btn"
        android:background="@color/wallet_holo_blue_light"
        android:gravity="center"
        android:text="Pay Via \n Wallet"
        android:textAlignment="center"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="340dp"/>

    <Button
        android:id="@+id/gobackchallan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="90dp"
        android:background="@color/wallet_holo_blue_light"
        android:gravity="center"
        android:text="Back"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="311dp" />

    <TextView
        android:id="@+id/paymsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="500dp"
        android:textColor="@color/white"></TextView>


</FrameLayout>