<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/repid"
    tools:context=".PaymentGateway">


    <Button
        android:id="@+id/paybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="270dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="Continue to the \n Payment Gateway"
        android:textColor="#0047AB"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pay_wallet_btn"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/acme"
        android:background="@color/wallet_holo_blue_light"
        android:gravity="center"
        android:text="Pay Via \n Wallet"
        android:textColor="#0047AB"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="360dp"/>

    <Button
        android:id="@+id/gobackchallan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="Back"
        android:textColor="#0047AB"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/paymsg"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="490dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#191970"></TextView>


</FrameLayout>