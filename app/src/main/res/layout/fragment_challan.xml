<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.Challan"
    android:background="@drawable/bg_try17"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="Challan"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="70dp"
        android:text= " 1. Overspeeding Challan on NH-24 on 20/01/2022, Amount=2000 \n \n2. Overspeeding Challan on NH-24 on 10/08/2021, Amount=1500"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <Button
        android:id="@+id/challanback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="250dp"
        android:layout_marginRight="50dp"
        android:background="@color/design_default_color_primary"
        android:text="Back"
        android:textColor="@color/white">

    </Button>

</LinearLayout>