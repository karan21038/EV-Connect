<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_try10"
    tools:context=".ui.profile.Insurance">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Insurance"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policy Holder:"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:gravity="center"/>

        <TextView
            android:id="@+id/policyholderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PolicyHolderName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="casual"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:text="Amount:"
            android:fontFamily="casual"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/InsuranceAmountID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Fetch Amount"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="casual"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:text="Premium Date:"
            android:fontFamily="casual"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/premiumID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Enter Premium Date "
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="casual"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:text="Renewal Date:"
            android:fontFamily="casual"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/RenewalID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:hint="Renewal Date"
            android:fontFamily="casual"
            android:textColor="@color/white"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="Add remianing number of days"
        android:id="@+id/remainingID"
        android:fontFamily="casual"
        android:textColor="@color/white"/>

</LinearLayout>