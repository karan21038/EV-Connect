<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img"
    tools:context=".ui.profile.Insurance">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Insurance"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policy Holder:"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center"/>

        <TextView
            android:id="@+id/policyholderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PolicyHolde"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="casual"
            android:text="Amount:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/InsuranceAmountID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:hint="Fetch Amount"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        android:layout_gravity="center"
        android:textAlignment="center"

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:text="Premium Date:"
            android:fontFamily="casual"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/premiumID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="MM/DD/YYYY"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:fontFamily="casual"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Renewal Date:"
            android:fontFamily="casual"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/RenewalID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:hint="MM/DD/YYYY"
            android:textSize="15dp"
            android:fontFamily="casual"
            android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="Add remianing number of days"
        android:id="@+id/remainingID"
        android:fontFamily="casual"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/insuranceback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:background="@color/design_default_color_primary"
        android:text="Back">

    </Button>

</LinearLayout>