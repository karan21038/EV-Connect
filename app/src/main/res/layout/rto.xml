<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.RTO"
    android:background="@drawable/bg_try17"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/aclonica"
        android:layout_gravity="center"
        android:text="RC Details"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGN. NO.: "
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp"
            android:textAlignment="center"
            android:fontFamily="casual"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/reg_no"
            android:text="Number"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:textColor="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textStyle="bold"
            android:text="Model: "
            android:textSize="25dp"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/model_name"
            android:text="Model"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="casual"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:textColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="casual"
            android:text="Owner Name:"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="casual"
            android:textSize="25dp"
            android:hint="Owner"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:text="MFG DT.:"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MM/DD/YYYY"
            android:id="@+id/mfg_date"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            android:fontFamily="casual"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:textStyle="bold"
            android:text="REGD UPTO.:"
            android:fontFamily="casual"
            android:visibility="invisible"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="REGD UPTO. (MM/DD/YYYY)"
            android:id="@+id/reg_upto"
            android:visibility="invisible"
            android:layout_marginLeft="40dp"
            android:fontFamily="casual"
            android:textColor="@color/white"/>


    </LinearLayout>
    <Button
        android:id="@+id/rtoback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:background="@color/design_default_color_primary"
        android:text="Back">

    </Button>


</LinearLayout>







