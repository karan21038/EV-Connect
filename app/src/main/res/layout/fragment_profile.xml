<?xml version="1.0" encoding="utf-8"?>

<!--    <?xml version="1.0" encoding="utf-8"?>-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="@drawable/bg_try17"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/profileID"
        android:layout_width="280dp"
        android:layout_height="112dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="80dp"
        android:height="80dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/walletID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="italic"
        android:hint="Fetch Wallet Amount"
        android:fontFamily="casual"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:text="Rs. 100"
        android:height="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FastTagID"
            android:layout_width="158dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="FastTag"
            android:textStyle="italic"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/InsuranceID"
            android:layout_width="158dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Insurance"
            android:textStyle="italic"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="450dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ChallanID"
            android:layout_width="158dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Challan"
            android:textStyle="italic"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/RTOID"
            android:layout_width="158dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="RTO" />
    </LinearLayout>



</FrameLayout>
</LinearLayout>