<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.stations.StationDetailFragment"
    android:background="@drawable/img">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:fontFamily="casual"
        android:textColor="#00008B"
        android:id="@+id/station_name" />

    <TextView
        android:id="@+id/station_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:hint="Address"
        android:textAlignment="center"
        android:textColor="#4169E1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/station_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:fontFamily="cursive"
        android:hint="Status"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/station_opening_time"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:hint="Opening Time"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/station_closing_time"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Closing Time"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/station_price"
            android:layout_width="150dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:textColor="#4169E1"
            android:hint="Price"
            android:textAlignment="center"
            android:textSize="25sp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Rating"
            android:textColor="#4169E1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:id="@+id/station_rating" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="475dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/useServiceBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="Use service"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/serviceDoneBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center"
            android:text="Service Done"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="550dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="225dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Waiting List Count"
            android:textAlignment="center"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/waitCountTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint=""
            android:textColor="#4169E1"
            android:textAlignment="center"
            android:textSize="25sp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/station_track"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="300dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/purple_700"
        android:text="Track" />
</FrameLayout>